<script>
    // Firebase Configuration
    const firebaseConfig = {
        apiKey: "AIzaSyC8eu7JXiwb7cxm0Vnq3JJ0wJqGgZanJ_w",
        authDomain: "neua-5f9cd.firebaseapp.com",
